{
  "name": "vee",
  "version": "1.1.2",
  "description": "A minimal code editor based on Microsoft's monaco editor.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasanthv/vee.git"
  },
  "keywords": [
    "electron",
    "code",
    "editor"
  ],
  "author": "Vasanth V",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/vasanthv/vee/issues"
  },
  "homepage": "https://github.com/vasanthv/vee#readme",
  "devDependencies": {
    "electron": "^2.0.5",
    "electron-builder": "^20.22.0"
  },
  "build": {
    "appId": "vee.editor",
    "productName": "vee",
    "copyright": "Copyright Â© year ${author}",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "./build/icon.icns",
      "fileAssociations": [
        {
          "ext": ["js", "ts", "md", "sh", "css", "log", "txt", "map", "php", "sql", "jsx", "xml", "html", "json", "scss", "less", "*"],
          "role": "Editor",
          "icon": "./file.icns"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "installerHeaderIcon": "./build/icon.ico"
    }
  },
  "dependencies": {
    "monaco-editor": "^0.13.1",
    "monaco-loader": "^0.13.0",
    "monaco-textmate": "^3.0.0",
    "mousetrap": "^1.6.2",
    "onigasm": "^2.2.1",
    "prettier": "1.13.7"
  }
}
